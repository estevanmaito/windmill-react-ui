{
  "name": "@windmill/react-ui",
  "version": "0.6.0",
  "description": "React UI component library built with Tailwind CSS",
  "main": "dist/index.js",
  "files": [
    "lib",
    "dist",
    "config.js",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist lib && npm run build:lib && npm run build:ts",
    "build:ts": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build:tailwind": "tailwindcss -i style/tailwind.css -o style/output.css -c style/tailwind.config.js --minify",
    "build:lib": "babel src/themes/default.ts --out-file lib/defaultTheme.js",
    "build": "webpack",
    "predev": "npm run build:tailwind",
    "cz": "git-cz",
    "test": "jest",
    "codecov": "codecov",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prerelease": "npm run build",
    "release": "release-it",
    "preladle": "npm run build:tailwind",
    "ladle": "npx ladle serve",
    "build-ladle": "npx ladle build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "classnames": "^2.3.2",
    "deepmerge": "^4.2.2",
    "postcss": "^8.2.15",
    "react-focus-lock": "^2.9.1",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.4",
    "@ladle/react": "^2.4.2",
    "@release-it/conventional-changelog": "^5.1.0",
    "@svgr/webpack": "^6.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "babel-jest": "^29.0.3",
    "babel-loader": "^8.1.0",
    "codecov": "^3.7.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.4.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/estevanmaito/windmill-react-ui.git"
  },
  "keywords": [],
  "author": "Estevan Maito <ejmaito@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estevanmaito/windmill-react-ui/issues"
  },
  "homepage": "https://github.com/estevanmaito/windmill-react-ui#readme",
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      ".*\\.d\\.ts",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/{Transition,index}.{ts,tsx}",
      "!src/{stories,utils}/*"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "\\.svg$": "<rootDir>/jest-svg-transformer.js",
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
